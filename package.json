{
  "name": "payid",
  "version": "1.0.0",
  "description": "The PayID Server reference implementation",
  "keywords": [],
  "homepage": "https://github.com/payid-org/payid#readme",
  "bugs": {
    "url": "https://github.com/payid-org/payid/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payid-org/payid.git"
  },
  "license": "Apache-2.0",
  "author": "",
  "main": "./build/src/index.js",
  "scripts": {
    "build": "rm -rf build && tsc --project . && npm run copySQL && npm run copyHTML",
    "buildWatch": "tsc --watch --project .",
    "copyHTML": "copyfiles -u 1 src/html/* build/src",
    "copySQL": "copyfiles -u 1 **/*.sql build/src",
    "lint": "eslint . --ext .ts --fix --max-warnings 0 && prettier --write '**/*.{md,json}'",
    "lintNoFix": "eslint . --ext .ts --max-warnings 0 && prettier --check '**/*.{md,json}'",
    "lintWatch": "chokidar src/**/*.ts -c \"npm run lint\" --initial --verbose",
    "prestart": "npm run build",
    "start": "node build/src/index.js",
    "startWatch": "tsc-watch --onSuccess 'npm run start'",
    "test": "nyc mocha 'test/**/*.test.ts'",
    "testWatch": "nyc mocha --watch 'test/**/*.test.ts'",
    "devEnvUp": "docker-compose up -d",
    "devDbUp": "docker-compose up -d db",
    "devDown": "docker-compose down"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "express": "^4.17.1",
    "knex": "^0.21.1",
    "knex-stringcase": "^1.4.1",
    "log4js": "^6.3.0",
    "pg": "8.2.1",
    "prom-client": "^12.0.0",
    "semver": "^7.3.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "@types/pg": "^7.14.3",
    "@types/semver": "^7.2.0",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "@xpring-eng/eslint-config-base": "^0.7.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chokidar": "^3.4.0",
    "chokidar-cli": "^2.1.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsdoc": "^27.0.7",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-tsdoc": "^0.2.5",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.8"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
